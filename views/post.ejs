<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
       
        <button class="btn btn-default fa fa-heart <%= post.likedBy.includes(user.id) ? 'liked' : '' %>" id="likeBtn" data-post="<%=post.id %>"></button>
        <span class="col-3" id="likeCount"><%= post.likes %></span>

        <button class="btn btn-default fa fa-regular fa-bookmark <%= post.favoritedBy.includes(user.id) ? 'favorite' : '' %>" id="favoriteBtn" data-post="<%=post.id %>"></button>
        <span class="col-3"><%= %></span>
          
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
    </div>

    <div class="mt-5">
      <h2>Add a Comment</h2>
      <form
        action="/comment/createComment/<%=post._id%>"
        method="POST"
      >
        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <input type="text" class="form-control" id="comment" name="comment" />
        </div>
      
        <button type="submit" class="btn btn-primary">
          Submit
        </button>
      </form>
    </div>

    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <span>
              <%=comments[i].user.userName  %>
            </span>
            <br>
            <span><%= comments[i].comment%></span>
            <br>
            <span>
              <!-- Check if user already liked a comment and add 'liked' class to button -->
              <button class="btn btn-default fa fa-heart likeCommentBtn <%=comments[i].likedBy.some(id => id.equals(user.id)) ? 'liked' : '' %>" data-comment="<%=comments[i]._id %>"></button>
              <!-- Count the likes -->
              <span class="col-3" id="commentCount-<%=comments[i]._id %>" data-comment="<%=comments[i]._id %>"><%= comments[i].likes %></span>
            </span>
          </li>
          
          <% if(comments[i].user._id == user.id){%>
            <li>
              
            <form
              action="/comment/deleteComment/<%=comments[i]._id %>?_method=DELETE"
              method="POST"
              class="col-3"
            >
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
        
            </li>
          <% }%>
      
      <% } %>
      
    </ul>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<script src="/js/main.js"></script>

<%- include('partials/footer') -%>
